<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- <properties>
		<property name="driverName" value="com.mysql.jdbc.Driver"/>
		<property name="url" value="jdbc:mysql://localhost:3306/favorite"/>
		<property name="username" value="root"/>
		<property name="password" value="a"/>
	</properties> -->
	<properties resource="db.properties"/>
	
	<settings>
		<setting name="logImpl" value="LOG4J"/>
	</settings>  

	<!-- 类的别名 -->
	<typeAliases>
		<!--   配置到类 <typeAlias type="com.yc.bean.Student"/>  -->
		<package name="com.yc.bean"/>
	</typeAliases>

	<!-- development: 表示当前环境为开发环境
						表示当前环境为工作环境 -->
	<environments default="development">
		<environment id="development">
			<!-- 事务管理方法: JDBC的提交和回滚功能 , commit(),  rollback()
			 				MANAGED : 由第三方框架来管理事务
			     -->
			<transactionManager type="JDBC" />
			
			<!-- 配置数据源 -->
			<!-- POOLED:支持数据库联接池
				UNPOOLED : 每次联接数据库都要打开和关闭
				JNDI : 依赖于容器( tomcat)的  java命名和目录接口
			-->
			<dataSource type="POOLED">
				<property name="driver" value="${driverName}" />
				<property name="url" value="${url}" />
				<property name="username" value="${user}" />
				<property name="password" value="${password}" />
			</dataSource>
			
		</environment>
	</environments>
	
	<!-- 表示sql语句配置映射文件-->
	<mappers>
		 <mapper resource="com/yc/bean/TagMapper.xml"/>
		 <mapper resource="com/yc/bean/FavoriteMapper.xml"/>
		<!-- <package name="com/yc/bean"/> -->
	</mappers>
	
	
</configuration>
